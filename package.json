{
  "name": "물방울톡",
  "version": "0.1.0",
  "description": "누구나 가볍게 참여하고 자연스럽게 대화를 이어갈 수 있도록 돕는, 부담 없는 음성 기반 소셜 서비스",
  "workspaces": [
    "fe",
    "be"
  ],
  "scripts": {
    "dev:fe": "npm run dev --workspace=fe",
    "dev:be": "npm run dev --workspace=be",
    "dev": "npm run dev --workspaces",
    "build:fe": "npm run build --workspace=fe",
    "build:be": "npm run build --workspace=be",
    "build": "npm run build --workspaces",
    "start:fe": "npm run start --workspace=fe",
    "start:be": "npm run start --workspace=be",
    "lint:fe": "npm run lint --workspace=fe",
    "lint:be": "npm run lint --workspace=be",
    "lint": "npm run lint --workspaces",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css}\"",
    "check-types:fe": "npm run type-check --workspace=fe || tsc --noEmit --project fe/tsconfig.json",
    "check-types:be": "npm run type-check --workspace=be || tsc --noEmit --project be/tsconfig.json",
    "check-types": "npm run check-types:fe && npm run check-types:be",
    "test:fe": "npm run test --workspace=fe",
    "test:be": "npm run test --workspace=be",
    "test": "npm run test --workspaces"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "prettier": "^3.0.0"
  }
}
